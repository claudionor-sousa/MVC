<!DOCTYPE html>
<html lang="pt-br" , style="background-color:#C8D8E4">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ProjetoEstagioMVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/Shared.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/UsuarioDoSistema.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/ProjetoEstagioMVC.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/teste.css" asp-append-version="true" />


</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark BackNav " aria-label="Offcanvas navbar large">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar2" aria-controls="offcanvasNavbar2">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasNavbar2" aria-labelledby="offcanvasNavbar2Label">
					<div class="offcanvas-header">
						<button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas" aria-label="Close"></button>
					</div>
					<div class="offcanvas-body">
						<ul class="navbar-nav justify-content-end flex-grow-1 pe-3 responsiveNavLink">
							<li class="nav-item col-2">
								<a class="nav-link ColorNavLink NavResponsive" asp-area="" asp-controller="Home" asp-action="Index">Página principal</a>
							</li>
							<li class="nav-item col-2">
								<a class="nav-link ColorNavLinkStart" asp-area="" asp-controller="UsuarioDoSistema" asp-action="Index">Usuario do Sitema</a>
							</li>
							<li class="nav-item col-4">

							</li>
							<li class="nav-item col-2">
								<a class="nav-link ColorNavLinkEnd" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar senha</a>
							</li>
							<li class="nav-item col-2">
								<a class="nav-link ColorNavLink" asp-area="" asp-controller="Home" asp-action="Index">Sair</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container ">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

